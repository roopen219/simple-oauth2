{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "rules": {
    "max-len": ["off"],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["ava"]
      }
    ],
    "max-classes-per-file": ["off"],
    "lines-between-class-members": ["off"],
    "quotes": ["error", "double"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "mjs": "always",
        "jsx": "always"
      }
    ],
    "default-param-last": ["off"],
    "no-shadow": ["off"],
    "comma-dangle": ["off"]
  }
}
