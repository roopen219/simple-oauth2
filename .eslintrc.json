{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2022
  },
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true
    }],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["ava"]
      }
    ],
    "strict": ["error", "safe"],
    "max-classes-per-file": ["off"],
    "lines-between-class-members": ["off"]
  }
}
