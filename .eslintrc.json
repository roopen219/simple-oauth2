{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": ["ava"]
      }
    ],
    "max-classes-per-file": ["off"],
    "lines-between-class-members": ["off"]
  }
}
